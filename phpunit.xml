<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/11.2/phpunit.xsd" bootstrap="vendor/autoload.php" colors="true" cacheDirectory=".phpunit.cache">
  <testsuites>
    <testsuite name="Loteria Test Suite">
      <directory>tests</directory>
    </testsuite>
  </testsuites>
  <coverage>
    <report>
      <html outputDirectory="coverage-report"/>
      <text outputFile="coverage-report.txt"/>
    </report>
  </coverage>
  <php>
    <env name="DB_HOST" value="localhost"/>
    <env name="DB_NAME" value="loteria"/>
    <env name="DB_USER" value="loteria"/>
    <env name="DB_PASS" value="password"/>
  </php>
  <source>
    <include>
      <directory suffix=".php">src</directory>
    </include>
  </source>
</phpunit>
